doi = {10.1353/sof.0.0027},
file = {:Users/burrelvannjr/Library/Application Support/Mendeley Desktop/Downloaded/Steensland - 2008 - Why do Policy Frames Change Actor-Idea Coevolution in Debates over Welfare Reform.pdf:pdf},
journal = {Social Forces},
